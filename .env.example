# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///app.db

# Database Pool Configuration
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800
DB_POOL_PRE_PING=true
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=1

# Redis Configuration
REDIS_URI=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# Target Website Configuration
WEBSITE_BASE_URL=https://www48.muenchen.de
WEBSITE_TIMEOUT=30

# Captcha Configuration
CAPTCHA_ENABLED=true
CAPTCHA_SOLUTION_TIMEOUT=30
CAPTCHA_2CAPTCHA_API_KEY=your-2captcha-api-key
CAPTCHA_SOLVER=2captcha  # Options: 2captcha, dummy

# Monitoring Configuration
MONITORING_ENABLED=true
LOG_LEVEL=INFO

# Notification Configuration
NOTIFICATION_ENABLED=true
NOTIFICATION_MAX_RETRIES=3
NOTIFICATION_RETRY_DELAY=60
NOTIFICATION_BATCH_SIZE=100
NOTIFICATION_COOLDOWN=300
NOTIFICATION_DAILY_DIGEST_TIME=08:00
NOTIFICATION_DATE_FORMAT=%Y-%m-%d
NOTIFICATION_TIME_FORMAT=%H:%M
NOTIFICATION_DATETIME_FORMAT=%Y-%m-%d %H:%M

# Task Queue Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Appointment Check Configuration
CHECK_INTERVAL=300  # 5 minutes
MAX_RETRIES=3
RETRY_DELAY=60  # 1 minute
MAX_PARALLEL_BOOKINGS=5  # maximum number of parallel booking attempts
BOOKING_TIMEOUT=30  # seconds to wait for booking attempts

# API Rate Limits
CHECK_RATE_LIMIT=10  # requests per minute
CHECK_RATE_WINDOW=60  # seconds
BOOK_RATE_LIMIT=5  # requests per minute
BOOK_RATE_WINDOW=60  # seconds

# User Credentials
USER_NAME=Your Name
USER_EMAIL=your.email@example.com
PERSON_COUNT=1
